@model IEnumerable<P2_2020ML603_2020VR650.Models.Departamentos>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de Departamentos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crea uno nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_departamento)
            </td>
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.id_departamento">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.id_departamento">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id_departamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
